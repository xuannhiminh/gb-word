<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background_3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/ad_app_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true" />

        <!-- Title + Body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ad_app_icon"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:baselineAligned="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ad_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ad_badge"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Ad"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="8sp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="4dp"
                    />

                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiktok"
                    android:textStyle="bold"
                    android:textColor="@color/text1"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                android:textSize="10sp"
                android:textColor="@color/text1"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"

            android:id="@+id/ad_icon_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/ad_info_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info_ads"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/ad_close_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_ads"/>
        </LinearLayout>

    </RelativeLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
