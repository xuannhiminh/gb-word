<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp border top màu đỏ -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- Đỏ -->
        </shape>
    </item>

    <!-- Lớp chính có bo góc, nền trắng và padding -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="12dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="9dp"
                android:bottom="4dp"/>
        </shape>
    </item>

</layer-list>
