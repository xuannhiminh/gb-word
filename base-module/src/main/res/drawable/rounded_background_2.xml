<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border top màu đỏ -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/input" /> <!-- Màu đỏ -->
        </shape>
    </item>

    <!-- Nền trắng + bo góc + padding -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/ads_background" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="9dp"
                android:bottom="4dp" />
        </shape>
    </item>

</layer-list>
