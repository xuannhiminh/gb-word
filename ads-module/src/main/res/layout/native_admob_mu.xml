<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@color/background_color"
            android:orientation="vertical">

            <!--        <TextView style="@style/AppTheme.AdAttribution"/>-->
            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_5sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="asssssssssssssssssssssssssssssssssssssssssssssss"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ad_advertiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:ellipsize="end"
                        android:text="Sponsored"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/ad_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_toLeftOf="@+id/ad_store"
                        android:gravity="right"
                        android:text="FREE"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/ad_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:gravity="left"
                        android:text="Google Play"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <RatingBar
                    android:id="@+id/ad_stars"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="assssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>


            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_below="@+id/info_view"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp" />

            <Button
                android:id="@+id/ad_call_to_action"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bg_btn_install"
                android:gravity="center"
                android:text="Install"
                android:textColor="#ffffff"
                android:textSize="@dimen/_12sdp" />

            <!--        <TextView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginTop="@dimen/_5sdp"-->
            <!--            android:gravity="center"-->
            <!--            android:text="Sorry for bothering you! This ads make our app free."-->
            <!--            android:textColor="#939393"-->
            <!--            android:textSize="@dimen/_10sdp"></TextView>-->
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ads_icon"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_4sdp"
            android:text="@string/ads"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/_7sdp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</com.google.android.gms.ads.nativead.NativeAdView>