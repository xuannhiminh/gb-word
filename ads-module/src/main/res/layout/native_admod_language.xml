<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nativeAd"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3sdp"
    android:paddingBottom="@dimen/_15sdp">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">

            <com.google.android.gms.ads.nativead.NativeAdView
                android:id="@+id/ad_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:visibility="gone"
                        android:paddingBottom="@dimen/_10sdp"
                        android:id="@+id/shimmerView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingEnd="@dimen/_20sdp"
                        android:paddingStart="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@color/colorTextGrey"></View>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_55sdp">
                            <View
                                android:background="@color/colorTextGrey"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"></View>
                            <View
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="@color/colorTextGrey"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"></View>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:background="@color/colorTextGrey"></View>

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/root_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/ad_call_to_action"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_37sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/background_btn_install"
                            android:gravity="center"
                            android:text="Install asldasd  asd asd sadasd "
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_14sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/content_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            app:layout_constraintTop_toBottomOf="@+id/ad_call_to_action">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/ic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="0dp"
                                app:civ_circle_background_color="@android:color/white"
                                app:layout_constraintEnd_toStartOf="@id/ad_headline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ad_app_icon"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    app:civ_circle_background_color="@android:color/white"
                                    app:layout_constraintEnd_toStartOf="@id/ad_headline"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:id="@+id/ad_headline"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="asssssssssssssssssssssssssssssssssssssssssssssss"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/ad_advertiser"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/ic"
                                app:layout_constraintTop_toTopOf="@id/ic" />

                            <TextView
                                android:id="@+id/ad_advertiser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="asssssssssssss"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@id/ad_headline"
                                app:layout_constraintTop_toBottomOf="@id/ad_headline"
                                tools:ignore="SpUsage" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/ad_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="2"
                            android:text="assssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/content_view" />


                        <com.google.android.gms.ads.nativead.MediaView
                            android:id="@+id/ad_media"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_95sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:layout_constraintTop_toBottomOf="@id/ad_body"
                            tools:layout_editor_absoluteX="13dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ad_body">

                            <TextView
                                android:id="@+id/ad_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:text="FREE"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="gone"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/ad_store"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:gravity="left"
                                android:text="Google Play"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="gone"
                                tools:ignore="SpUsage" />
                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.gms.ads.nativead.NativeAdView>
        </androidx.cardview.widget.CardView>


    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ads_icon"
        android:padding="@dimen/_2sdp"
        android:paddingHorizontal="@dimen/_3sdp"
        android:text="@string/ads"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/_6sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
