<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <office.file.ui.editor.SOHorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@id/ppt_format_toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="@dimen/sodk_editor_toolbar_v_padding"
            android:paddingBottom="@dimen/sodk_editor_toolbar_v_padding">

            <office.file.ui.editor.SOTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@color/sodk_editor_toolbar"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:text="@string/sodk_editor_shape_and_line_upper"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/sodk_editor_ppt_format_title_textcolor" />

            <LinearLayout
                android:id="@id/shape_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:background="@drawable/r0_press"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_shape_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sodk_editor_tab_slides"
                    android:textColor="@color/zs_color_black"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/line_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/r0_press"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_line_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sodk_editor_tab_slides"
                    android:textColor="@color/zs_color_black"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:id="@id/line_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:background="@drawable/r0_press"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_line_width" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sodk_editor_tab_slides"
                    android:textColor="@color/zs_color_black"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/line_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/r0_press"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_line_type" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sodk_editor_tab_slides"
                    android:textColor="@color/zs_color_black"
                    android:visibility="gone" />
            </LinearLayout>


            <View style="@style/sodk_editor_toolbar_divider" />

            <office.file.ui.editor.SOTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:text="@string/sodk_editor_arrange_upper"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/sodk_editor_ppt_format_title_textcolor" />

            <LinearLayout
                android:id="@id/arrange_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/r0_press"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrange_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sodk_editor_tab_slides"
                    android:textColor="@color/zs_color_black"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:id="@id/arrange_backwards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/r0_press"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrange_backward" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sodk_editor_tab_slides"
                    android:textColor="@color/zs_color_black"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/arrange_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/r0_press"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrange_forward" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sodk_editor_tab_slides"
                    android:textColor="@color/zs_color_black"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/arrange_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/r0_press"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_arrange_front" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sodk_editor_tab_slides"
                    android:textColor="@color/zs_color_black"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </office.file.ui.editor.SOHorizontalScrollView>
</merge>