<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/sodk_editor_number_format_popup"
    android:orientation="vertical">

    <office.file.ui.editor.SOTextView
        style="@style/sodk_editor_wheel_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4.0dip"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/sodk_editor_number_format_custom" />

    <kankan.wheel.widget.WheelViewLib
        android:id="@id/custom_wheel"
        android:layout_width="300.0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="5.0dip" />

    <LinearLayout
        android:id="@id/create_new_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="5.0dip"
        android:orientation="horizontal">

        <office.file.ui.editor.SOTextView
            style="@style/sodk_editor_wheel_checkbox_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="@string/sodk_editor_create_new"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_11ssp" />

        <Space
            android:layout_width="1.0dip"
            android:layout_height="1.0dip"
            android:layout_weight="1.0"
            android:clickable="false" />

        <office.file.ui.editor.SOTextView
            style="@style/sodk_editor_wheel_plus_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="+"
            android:textSize="28.0sp" />
        />
    </LinearLayout>

    <LinearLayout
        android:id="@id/edit_function_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="5.0dip"
        android:orientation="horizontal">

        <office.file.ui.editor.SOTextView
            style="@style/sodk_editor_wheel_checkbox_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sodk_editor_edit_function"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />

        <Space
            android:layout_width="1.0dip"
            android:layout_height="1.0dip"
            android:layout_weight="1.0" />

        <office.file.ui.editor.SOTextView
            android:id="@id/edit_function_indicator"
            style="@style/sodk_editor_wheel_plus_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="28.0sp" />
        />
    </LinearLayout>
</LinearLayout>