<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:layout_height="@dimen/_40sdp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/back_button"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:contentDescription="@string/sodk_editor_nav_back"
        android:gravity="center_vertical"
        android:padding="@dimen/_10sdp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/lib_ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/document_icon_color" />

    <office.file.ui.editor.SOTextView
        android:id="@id/footer_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:ellipsize="middle"
        android:gravity="center|start"
        android:fontFamily="@font/poppins_bold"
        android:singleLine="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/document_text_color"
        android:textSize="@dimen/_13ssp" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_button"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/sodk_editor_nav_back"
        android:gravity="center_vertical"
        android:padding="@dimen/_6sdp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_lib_search"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/document_icon_color" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fullscreen_button"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/sodk_editor_nav_back"
        android:gravity="center_vertical"
        android:padding="@dimen/_6sdp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_lib_view_full"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/document_icon_color" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/slideshow_button"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/sodk_editor_nav_back"
        android:gravity="center_vertical"
        android:padding="@dimen/_6sdp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_lib_slideshow"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/document_icon_color" />
</LinearLayout>