<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_32sdp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_32sdp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/_40sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:background="@drawable/banner_border"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_2sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/ic_ads_view" />

                    <ImageView
                        android:id="@+id/ad_app_icon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:padding="@dimen/_3sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sodk_ic_so_app_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="start|center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/ad_headline"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center|start|bottom"
                        android:maxLines="1"
                        android:text="adiajdasidi suaiduasdsa"
                        android:textColor="#0048D3"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/ad_advertiser"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:textColor="#000"
                            android:textSize="12sp" />

                        <RatingBar
                            android:id="@+id/ad_stars"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/ad_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp"
                            android:ellipsize="end"
                            android:gravity="center|start|top"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/ad_call_to_action"
                    android:layout_width="68dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/r4_blue_press"
                    android:gravity="center"
                    android:text="Install"
                    android:textColor="#fff"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.gms.ads.nativead.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="250.0dip"
                    android:layout_height="175.0dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5.0dip" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:paddingTop="10.0dip"
                    android:paddingBottom="10.0dip">

                    <TextView
                        android:id="@+id/ad_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5.0dip"
                        android:paddingLeft="5.0dip"
                        android:paddingEnd="5.0dip"
                        android:paddingRight="5.0dip"
                        android:textColor="#000"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/ad_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5.0dip"
                        android:paddingLeft="5.0dip"
                        android:paddingEnd="5.0dip"
                        android:paddingRight="5.0dip"
                        android:textColor="#000"
                        android:textSize="12.0sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>