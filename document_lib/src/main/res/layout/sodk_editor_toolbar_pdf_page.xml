<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/first_page_button"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    app:srcCompat="@drawable/ic_lib_first_page"
                    android:padding="@dimen/lib_toolbar_button_padding"
                    android:layout_height="@dimen/_30sdp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/first_page"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/document_text_color"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/previous_link_button"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    app:srcCompat="@drawable/ic_lib_last_page"
                    android:padding="@dimen/lib_toolbar_button_padding"
                    android:layout_height="@dimen/_30sdp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/previous"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/document_text_color"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/next_link_button"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    app:srcCompat="@drawable/ic_lib_first_page"
                    android:padding="@dimen/lib_toolbar_button_padding"
                    android:layout_height="@dimen/_30sdp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/first_page"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/document_text_color"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/last_page_button"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    app:srcCompat="@drawable/ic_lib_last_page"
                    android:padding="@dimen/lib_toolbar_button_padding"
                    android:layout_height="@dimen/_30sdp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/last_page"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/document_text_color"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toc_button"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    app:srcCompat="@drawable/ic_lib_outline"
                    android:padding="@dimen/lib_toolbar_button_padding"
                    android:layout_height="@dimen/_30sdp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/outline"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/document_text_color"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>