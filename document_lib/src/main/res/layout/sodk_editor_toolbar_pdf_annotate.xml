<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/highlight_button"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_height="@dimen/_30sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            app:srcCompat="@drawable/ic_lib_highlight"
            android:padding="@dimen/lib_toolbar_button_padding"
            android:layout_height="@dimen/_30sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="@string/highlight"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/document_text_color"
            android:fontFamily="@font/poppins_medium"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_marginTop="@dimen/lib_toolbar_button_padding"
        android:layout_marginBottom="@dimen/lib_toolbar_button_padding"
        android:background="@color/line"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/draw_button"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_height="@dimen/_30sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            app:srcCompat="@drawable/ic_lib_draw"
            android:padding="@dimen/lib_toolbar_button_padding"
            android:layout_height="@dimen/_30sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="@string/draw"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/document_text_color"
            android:fontFamily="@font/poppins_medium"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_color_button"
        android:layout_width="@dimen/_30sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_height="@dimen/_30sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/line_color"
            android:layout_width="match_parent"
            app:srcCompat="@drawable/ic_lib_rect_border"
            android:padding="@dimen/lib_toolbar_button_padding"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_thickness_button"
        android:layout_width="@dimen/_30sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_height="@dimen/_30sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/ic_lib_rect_width"
            android:padding="@dimen/lib_toolbar_button_padding"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_button"
        android:layout_width="@dimen/_30sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_height="@dimen/_30sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/ic_lib_delete"
            android:padding="@dimen/lib_toolbar_button_padding"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_marginTop="@dimen/lib_toolbar_button_padding"
        android:layout_marginBottom="@dimen/lib_toolbar_button_padding"
        android:background="@color/line"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/note_button"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_height="@dimen/_30sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            app:srcCompat="@drawable/ic_lib_note"
            android:padding="@dimen/lib_toolbar_button_padding"
            android:layout_height="@dimen/_30sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="@string/note"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/document_text_color"
            android:fontFamily="@font/poppins_medium"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_marginTop="@dimen/lib_toolbar_button_padding"
        android:layout_marginBottom="@dimen/lib_toolbar_button_padding"
        android:background="@color/line"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/author_button"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_height="@dimen/_30sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            app:srcCompat="@drawable/ic_lib_author"
            android:padding="@dimen/lib_toolbar_button_padding"
            android:layout_height="@dimen/_30sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="@string/author"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/document_text_color"
            android:fontFamily="@font/poppins_medium"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>