<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/sodk_editor_button_pressed" />
            <corners android:radius="12.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/sodk_editor_button_normal" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/sodk_editor_button_selected" />
            <corners android:radius="12.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/sodk_editor_button_normal" />
        </shape>
    </item>
</selector>