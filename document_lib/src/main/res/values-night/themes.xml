<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OfficeSub" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--Tab-->
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="textAllCaps">true</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#2489FF</item>
        <item name="tabSelectedTextColor">#2489FF</item>
        <item name="tabTextColor">#CCCCCC</item>
        <item name="fontFamily">@font/roboto_regular</item>

    </style>

    <style name="DialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <!-- dialog_background is drawable shape with corner radius -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <style name="DialogFullScreen" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- dialog_background is drawable shape with corner radius -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="CreateDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="LoadingStyle">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
    </style>

    <style name="ThemeTextDark">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="ThemeTextLight">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Ads">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Ads</item>
    </style>

    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:itemPadding">@dimen/_5sdp</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/_10sdp</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/_10sdp</item>


    </style>

    <style name="AdInspectorActivityTheme" parent="@android:style/Theme.Translucent">
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>
</resources>