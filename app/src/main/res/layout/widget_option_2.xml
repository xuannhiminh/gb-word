<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget3Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent">
    <LinearLayout
        android:background="@drawable/dialog_background_round_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_152sdp">
        <!-- First row: Recent / Bookmarks -->
        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/searchBar"
            android:paddingTop="@dimen/_9sdp"
            android:paddingBottom="@dimen/_9sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_background"
            android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivSearchIcon"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:src="@drawable/icon_search"
            android:layout_marginEnd="@dimen/_8sdp"
        android:contentDescription="@string/search" />

        <TextView
            android:id="@+id/tvSearchPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:fontFamily="sans-serif"
            android:textFontWeight="400"
            android:textStyle="italic"
            android:textSize="8sp"
            android:textColor="@color/text2" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/latest_file_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp">

            <!-- PDF Icon -->
            <ImageView
                android:id="@+id/file_icon_1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_pdf" />

            <!-- File Info (Title + Date/Size) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/file_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PDF-02.pdf"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="700"
                    android:textColor="@color/text1"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/file_details_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar 4 10:01 AM | 100 KB"
                    android:textSize="11sp"
                    android:textFontWeight="400"
                    android:textColor="@color/text2" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Recent File Row -->
        <LinearLayout
            android:id="@+id/latest_file_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_6sdp"
           >

            <!-- DOC Icon -->
            <ImageView
                android:id="@+id/file_icon_2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_word" />

            <!-- File Info (Title + Date/Size) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/file_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homework.doc"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="700"
                    android:textColor="@color/text1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/file_details_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar 4 10:01 AM | 100 KB"
                    android:textSize="11sp"
                    android:textFontWeight="400"
                    android:textColor="@color/text2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
