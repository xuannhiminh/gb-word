<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_dialog_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_12sdp">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/close_iap"
                android:contentDescription="Close" />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get_free_trial"
                android:textColor="@color/title_iap"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_8sdp" />

        </LinearLayout>

        <!-- Features list -->
        <LinearLayout
            android:id="@+id/layout_features"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_12sdp">

            <TextView
                android:id="@+id/feature_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unlocked_premium_features"
                android:textColor="@color/title_iap"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                android:layout_marginBottom="@dimen/_8sdp" />

            <TextView
                android:id="@+id/feature_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exclusive_tools_to_enhance"
                android:textColor="@color/title_iap"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                android:layout_marginBottom="@dimen/_8sdp" />

            <TextView
                android:id="@+id/feature_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_payment_cancel_refund"
                android:textColor="@color/title_iap"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"/>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trial_conditions"
            android:textColor="@color/title_iap"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_23sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_free_trial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <TextView
                        android:id="@+id/btn_FreeTrial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_free_trial_gradient_border"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="@string/start_free_trial_now"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/shine_view"
                        android:layout_width="80dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shine_gradient"
                        android:rotation="300"
                        android:alpha="0.6"
                        android:visibility="visible"
                        android:elevation="4dp" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
