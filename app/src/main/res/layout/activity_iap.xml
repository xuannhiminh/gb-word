<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingVertical="@dimen/_8sdp"
    android:background="@drawable/bacground_iap">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topButtonBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_close_iap"
            android:contentDescription="@string/close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Nút Restore -->
        <TextView
            android:id="@+id/btnRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_11sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:gravity="center"
            android:text="@string/restore_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/btn_restore_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_iap"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:fontFamily="sans-serif"
        android:textFontWeight="500"
        app:layout_constraintTop_toBottomOf="@id/topButtonBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_12sdp"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tagline"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:fontFamily="sans-serif"
        android:textFontWeight="400"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/featureSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_feature_section_gradient"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_24sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:paddingTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFeatureHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_title"
                android:layout_marginBottom="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:text="@string/feature_remove_ads"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"/>
            <TextView
                android:text="@string/feature_edit_pdf"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_20sdp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"/>
            <TextView
                android:text="@string/feature_sign_documents"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"/>
            <TextView
                android:text="@string/feature_add_images"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textFontWeight="400" />
            <TextView
                android:text="@string/feature_scan_pdf"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"/>
            <TextView
                android:text="@string/feature_mark_annotate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"/>
            <TextView
                android:text="@string/feature_read_all_format"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"/>
        </LinearLayout>

        <!-- Column 2: Pro -->
        <LinearLayout
            android:id="@+id/pro_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:paddingTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:background="@drawable/bg_column_pro_gradient">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_iap"/>
                <TextView
                    android:id="@+id/tv_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plan_pro"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <ImageView
                android:src="@drawable/icon_check_pro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_check_pro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_check_pro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_check_pro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_check_pro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_check_pro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_check_pro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBasicHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plan_basic"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_16sdp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:src="@drawable/icon_close_basic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_close_basic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_close_basic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_close_basic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_close_basic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_close_basic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:src="@drawable/icon_check_iap"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_subscribeAnnual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#33FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/featureSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_12sdp">

                <!-- START section -->
                <LinearLayout
                    android:id="@+id/start_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/end_section">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subscribe_annually"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textFontWeight="500"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_3_days_free_trial"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif"
                        android:textFontWeight="400"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- END section -->
                <LinearLayout
                    android:id="@+id/end_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/price_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="11sp"
                        android:fontFamily="sans-serif"
                        android:textFontWeight="400"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/badge"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginEnd="-4dp"
        android:background="@drawable/bange"
        android:elevation="8dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="6dp"
        android:rotation="1"
        android:translationY="-20dp"
        app:layout_constraintTop_toBottomOf="@id/featureSection"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_label"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:rotation="1"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_subscribeMonthly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#33FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/btn_subscribeAnnual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shine_monthly_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_19sdp">

            <!-- Start section -->
            <LinearLayout
                android:id="@+id/start_section_monthly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/end_section_monthly">

                <TextView
                    android:id="@+id/title_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscribe_monthly"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="500"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- End section -->
            <LinearLayout
                android:id="@+id/end_section_monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/price_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shine_free_trial_container"
        android:layout_width="0dp"
        android:layout_height="@dimen/_37sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/btn_subscribeMonthly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_free_trial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false">


                <TextView
                    android:id="@+id/btn_FreeTrial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_free_trial_gradient_border"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@string/_3_days_free_trial"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/shine_view"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/_31sdp"
                    android:background="@drawable/shine_gradient"
                    android:rotation="300"
                    android:alpha="0.6"
                    android:visibility="visible"
                    android:elevation="4dp" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/text_cancel_anytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_note"
            android:textColor="#707070"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="400"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Dòng link điều hướng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/term_of_use"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/term_of_use"
                android:textColor="#707070"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="#707070"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/privacy_policy"
                android:textColor="#707070"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="500" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
