<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_dialog_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <TextView
            android:id="@+id/emoji_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜ƒ"
            android:textColor="@color/text1"
            android:textSize="40sp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thank_for_support"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text1"
            android:layout_marginTop="@dimen/_12sdp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="500"
            android:text="@string/rate_us_content"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/text1" />

        <!-- Stars -->
        <LinearLayout
            android:id="@+id/star_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp"
                android:layout_weight="1"
                android:src="@drawable/icon_rate"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp"
                android:layout_weight="1"
                android:src="@drawable/icon_rate"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp"
                android:layout_weight="1"
                android:src="@drawable/icon_rate"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp"
                android:layout_weight="1"
                android:src="@drawable/icon_rate"
                android:scaleType="fitCenter" />
            <ImageView
                android:id="@+id/star5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp"
                android:layout_weight="1"
                android:src="@drawable/icon_rate"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background_red"
            android:elevation="0dp"
            android:letterSpacing="0"
            android:shadowColor="@android:color/transparent"
            android:text="@string/rate"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:layout_marginTop="@dimen/_12sdp"
            android:stateListAnimator="@null"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>
