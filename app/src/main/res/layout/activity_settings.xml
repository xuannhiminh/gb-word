<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primaryColor"
        android:paddingVertical="@dimen/_12sdp"
        android:paddingHorizontal="@dimen/_16sdp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/icon_setting_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/setting"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="500"
            android:layout_marginStart="@dimen/_20sdp" />

        <ImageView
            android:id="@+id/func_rate_us"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/icon_favourite"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_iap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_iap_premium"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:src="@drawable/icon_gift"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_iap_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uprange_to_premium"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_iap_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_premium_features"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_iap_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_full_offer"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                android:textSize="12sp"/>

        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/icon_iap_forward" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_12sdp"
        android:paddingHorizontal="@dimen/_18sdp">

        <LinearLayout
            android:id="@+id/func_feature_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                app:fvTitle="@string/feature_request"
                app:fvIcon="@drawable/icon_feature_request" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"
                android:clickable="false"
                android:focusable="false"
                android:duplicateParentState="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/func_browse_more_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                app:fvTitle="@string/browse_more_files"
                app:fvIcon="@drawable/icon_setting_more_files" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"
                android:clickable="false"
                android:focusable="false"
                android:duplicateParentState="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/func_change_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                app:fvTitle="@string/change_language"
                app:fvIcon="@drawable/icon_setting_language" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/func_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                android:layout_height="wrap_content"
                app:fvTitle="@string/push_notifications"
                app:fvIcon="@drawable/icon_setting_notification" />

            <Switch
                android:id="@+id/switch_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/func_keep_screen_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                app:fvTitle="@string/keep_screen_on"
                app:fvIcon="@drawable/icon_setting_keep_screen" />

            <Switch
                android:id="@+id/switch_keep_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/func_night_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                android:layout_height="wrap_content"
                app:fvTitle="@string/pdf_night_mode"
                app:fvIcon="@drawable/icon_setting_night_mode_2" />

            <Switch
                android:id="@+id/switch_night_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/func_add_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                android:layout_height="wrap_content"
                app:fvTitle="@string/add_widget"
                app:fvIcon="@drawable/icon_widget_scan" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/func_set_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                android:layout_height="wrap_content"
                app:fvTitle="@string/set_app_default"
                app:fvIcon="@drawable/icon_setting_widget" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/_24sdp"
            android:background="@color/input" />

        <LinearLayout
            android:id="@+id/func_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                android:layout_height="wrap_content"
                app:fvTitle="@string/share_app"
                app:fvIcon="@drawable/icon_share_app" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/func_send_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                android:layout_height="wrap_content"
                app:fvTitle="@string/send_feedback"
                app:fvIcon="@drawable/icon_setting_feedback" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/func_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                android:layout_height="wrap_content"
                app:fvTitle="@string/privacy_policy"
                app:fvIcon="@drawable/icon_setting_privacy" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/func_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                android:layout_height="wrap_content"
                app:fvTitle="@string/terms_and_conditions"
                app:fvIcon="@drawable/icon_setting_terms" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/func_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_setting_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                app:fvTextColor="@color/text1"
                android:layout_height="wrap_content"
                app:fvTitle="@string/about_us"
                app:fvIcon="@drawable/icon_setting_about_us" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting_more"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
    <FrameLayout
    android:id="@+id/layout_native"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frNativeAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>
</LinearLayout>