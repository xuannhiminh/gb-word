<?xml version="1.0" encoding="utf-8"?>
<com.ezteam.baseproject.dialog.SpotlightOverlayView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spotlight_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_point_hand"
        android:rotation="-120"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"/>

    <!-- Hộp nội dung -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_background"
        android:layout_gravity="center|end"
        android:layout_marginEnd="32dp"
        android:elevation="10dp">

<!--        <TextView-->
<!--            android:id="@+id/title"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/user_guide_title"-->
<!--            android:textColor="@color/text1"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="16sp" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipe_refresh_guide"
            android:textColor="@color/text1"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btn_got_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_background_red"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</com.ezteam.baseproject.dialog.SpotlightOverlayView>
