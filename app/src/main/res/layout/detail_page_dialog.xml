<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bottom_dialog_background"
        android:elevation="8dp"
        android:padding="@dimen/_12sdp">
        <FrameLayout
            android:id="@+id/layout_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            >
            <FrameLayout
                android:id="@+id/frNativeAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </FrameLayout>
        </FrameLayout>
        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text1"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="@dimen/_6sdp"/>

        <!-- Detail rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Filename -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_name"
                android:textColor="@color/text1"
                android:textSize="14sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_6sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo PDF.pdf"
                android:textColor="@color/text"
                android:textFontWeight="500"
                android:textSize="10sp"
                android:paddingBottom="@dimen/_6sdp"
                android:fontFamily="sans-serif" />

            <!-- Storage path -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/storage_path"
                android:textColor="@color/text1"
                android:textSize="14sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_6sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/storage/emulated/0/..."
                android:textColor="@color/text"
                android:textFontWeight="500"
                android:textSize="10sp"
                android:fontFamily="sans-serif"
                android:paddingBottom="@dimen/_6sdp"/>

            <!-- Last modified -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_modified"
                android:textColor="@color/text1"
                android:textSize="14sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_6sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_modified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:25, Apr 9, 2025"
                android:textColor="@color/text"
                android:textFontWeight="500"
                android:textSize="10sp"
                android:fontFamily="sans-serif"
                android:paddingBottom="@dimen/_6sdp"/>

            <!-- Last viewed -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_view"
                android:textColor="@color/text1"
                android:textSize="14sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_6sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_viewed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:25, Apr 10, 2025"
                android:textColor="@color/text"
                android:textFontWeight="500"
                android:textSize="10sp"
                android:fontFamily="sans-serif"
                android:paddingBottom="@dimen/_6sdp"/>

            <!-- File size -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_size"
                android:textColor="@color/text1"
                android:textSize="14sp"
                android:textFontWeight="500"
                android:paddingTop="@dimen/_6sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19.2 KB"
                android:textColor="@color/text"
                android:textFontWeight="500"
                android:textSize="10sp"
                android:fontFamily="sans-serif"
                android:paddingBottom="@dimen/_6sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="@dimen/_6sdp">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background"
                android:elevation="0dp"
                android:letterSpacing="0"
                android:shadowColor="@android:color/transparent"
                android:text="@string/ok"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:stateListAnimator="@null"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
