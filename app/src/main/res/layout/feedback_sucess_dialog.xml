<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_dialog_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/layout_native"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frNativeAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <ImageView
            android:layout_width="48dp"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:src="@drawable/ic_check"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0"
            android:lineSpacingExtra="0dp"
            android:text="@string/thank_for_feedback"
            android:textColor="@color/text1"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:letterSpacing="0"
            android:lineSpacingExtra="0dp"
            android:textFontWeight="500"
            android:layout_gravity="center_horizontal"
            android:text="@string/we_will_bring_better_user_ex"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnInstall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_background_primary"
            android:elevation="0dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0"
            android:shadowColor="@android:color/transparent"
            android:stateListAnimator="@null"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>
