<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_dialog_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">
        <RelativeLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/_16sdp"
                android:src="@drawable/icon_feedback" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/iv_icon"
                android:src="@drawable/icon_close_insert"
                android:padding="4dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/are_you_satisfied"
            android:textSize="24sp"
            android:textColor="@color/text1"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_16sdp" />

        <!-- Hai nút phản hồi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:background="@drawable/background_negative"
                android:elevation="0dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0"
                android:lineHeight="@dimen/_24sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:stateListAnimator="@null"
                android:text="@string/not_really"
                android:textAllCaps="false"
                android:textColor="@color/text1"
                android:textFontWeight="600"
                android:textSize="20sp"
                android:theme="@style/Theme.PDFReaderProNegative" />

            <Button
                android:theme="@style/Theme.PDFReaderProNegative"
                android:id="@+id/btn_rate_us"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:text="@string/love_it"
                android:textSize="20sp"
                android:lineHeight="@dimen/_24sdp"
                android:textAllCaps="false"
                android:textColor="@color/text1"
                android:fontFamily="sans-serif"
                android:textFontWeight="600"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                android:letterSpacing="0"
                android:background="@drawable/background_negative"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
