<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <!-- Content row (Text ~70%, PDF Icon ~30%) -->
    <LinearLayout
        android:id="@+id/contentRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- LinearLayout for the text portion (70% width) -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginEnd="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Project_Report_Q1_2025.pdf"
                android:textColor="@color/text1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="@string/unfinished_reading"
                android:textColor="@color/text1"
                android:textFontWeight="400"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- PDF icon (30% width) -->
    </LinearLayout>

    <!-- "Open file" button below the content row -->
    <ImageView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/image_preview"
        android:layout_width="@dimen/_100sdp"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/_100sdp"
        android:scaleType="center" />

    <Button
        android:id="@+id/button_open"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/btn_background_primary"
        android:fontFamily="sans-serif"
        android:text="@string/open_now"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textFontWeight="700"
        android:textSize="12sp"
        android:textStyle="bold" />
</LinearLayout>