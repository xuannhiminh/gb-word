<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_notification_card"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_12sdp"
    android:paddingHorizontal="@dimen/_24sdp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_file_icon"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/icon_pdf"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="@dimen/_12sdp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Essential Document"
        android:textStyle="bold"
        android:textColor="@color/text1"
        android:textSize="18sp"
        android:layout_marginBottom="@dimen/_4sdp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Today's Essential File!"
        android:textColor="@color/text1"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:layout_marginBottom="@dimen/_9sdp"/>

    <Button
        android:id="@+id/button_open"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_31sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/btn_background_red"
        android:fontFamily="sans-serif"
        android:text="Review"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textFontWeight="500"
        android:textSize="16sp"/>
</LinearLayout>
