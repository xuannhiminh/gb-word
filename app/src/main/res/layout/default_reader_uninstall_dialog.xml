<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_dialog_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/layout_native"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frNativeAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:src="@drawable/man_holding_phone" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0"
            android:lineSpacingExtra="0dp"
            android:text="@string/set_pdf_reader_as_your_default_pdf_file_viewer"
            android:textColor="@color/text1"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:letterSpacing="0"
            android:lineSpacingExtra="0dp"
            android:textFontWeight="500"
            android:text="@string/default_reader_uninstall_description1"
            android:textColor="@color/text1"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvDescription2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:letterSpacing="0"
            android:textFontWeight="500"
            android:lineSpacingExtra="0dp"
            android:text="@string/default_reader_uninstall_description2"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/option_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_outline"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            >
            <ImageView
                android:id="@+id/file_icon"
                android:layout_width="36dp"
                android:layout_height="47dp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/icon_pdf"
                />
            <TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textFontWeight="500"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@color/text1"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background_red"
            android:elevation="0dp"
            android:letterSpacing="0"
            android:shadowColor="@android:color/transparent"
            android:text="@string/reset"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:layout_marginTop="@dimen/_12sdp"
            android:stateListAnimator="@null"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnLater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_cancel"
            android:elevation="0dp"
            android:letterSpacing="0"
            android:layout_marginTop="@dimen/_8sdp"
            android:shadowColor="@android:color/transparent"
            android:text="@string/later"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:stateListAnimator="@null"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>
