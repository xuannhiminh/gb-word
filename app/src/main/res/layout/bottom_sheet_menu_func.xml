<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_dialog_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <FrameLayout
            android:id="@+id/layout_native"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frNativeAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
            android:id="@+id/func_browse_more_files"
            android:layout_width="match_parent"
            app:fvTitle="@string/browse_more_files"
            app:fvIcon="@drawable/icon_more_files"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="500"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input" />

        <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
            android:id="@+id/func_rate_us"
            android:layout_width="match_parent"
            app:fvTitle="@string/rate_us"
            app:fvIcon="@drawable/icon_rate"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="500"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input" />

        <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
            android:id="@+id/func_send_feedback"
            android:layout_width="match_parent"
            app:fvTitle="@string/send_feedback"
            app:fvIcon="@drawable/icon_send_feedback"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="500"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input" />

        <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
            android:id="@+id/func_share"
            android:layout_width="match_parent"
            app:fvTitle="@string/share_app"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="500"
            app:fvIcon="@drawable/icon_share_app"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input" />

        <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
            android:id="@+id/func_privacy"
            android:layout_width="match_parent"
            app:fvTitle="@string/privacy_policy"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="500"
            app:fvIcon="@drawable/icon_privacy_policy"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input" />

        <com.pdf.pdfreader.pdfviewer.editor.view.ItemFunctionView
            android:id="@+id/func_change_language"
            android:layout_width="match_parent"
            app:fvTitle="@string/change_language"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="500"
            app:fvIcon="@drawable/icon_change_language"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>