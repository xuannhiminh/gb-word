<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:background="@drawable/top_dialog_background"
        android:padding="@dimen/_16sdp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_pdf_reader_as_your_default_title"
            android:textSize="18sp"
            android:textColor="@color/text1"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_16sdp" />

        <!-- Instruction Box with overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_instruction_box"
                android:padding="24dp">

                <!-- Step 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:text="1"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_step_circle"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/step1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="500"
                        android:text="@string/select_pdf_reader"
                        android:textColor="@color/text1"
                        android:textSize="14sp"  />

                </LinearLayout>
                <ImageView
                    android:id="@+id/file_icon"
                    android:layout_width="36dp"
                    android:layout_height="47dp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:src="@drawable/icon_pdf"
                    />
                <!-- Step 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:text="2"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_step_circle"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:id="@+id/step2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="500"
                        android:text="@string/click_always_to_set"
                        android:textColor="@color/text1"
                        android:textSize="14sp"  />
                </LinearLayout>
            </LinearLayout>

            <!-- Gradient overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_bottom" />
        </FrameLayout>

        <!-- OK Button -->
        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/btn_background_red"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:elevation="0dp"
            android:stateListAnimator="@null" />
    </LinearLayout>
</FrameLayout>
