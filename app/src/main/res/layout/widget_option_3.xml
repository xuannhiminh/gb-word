<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget3Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent">
    <LinearLayout
        android:background="@drawable/dialog_background_round_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_104sdp">
        <!-- First row: Recent / Bookmarks -->
        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/searchBar"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivSearchIcon"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/icon_search"
                android:layout_marginEnd="@dimen/_8sdp"
                android:contentDescription="@string/search" />

            <TextView
                android:id="@+id/tvSearchPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                android:textStyle="italic"
                android:textSize="8sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Second row: PDF / Word / Excel / PPT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ivHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_home_red"
                    android:contentDescription="@string/pdf_desc" />

                <TextView
                    android:id="@+id/tvPdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="500"
                    android:textColor="@color/text1"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <LinearLayout
                android:id="@+id/ivRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_recent_blue"
                    android:contentDescription="@string/word_desc" />

                <TextView
                    android:id="@+id/tvWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_recent"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="500"
                    android:textAllCaps="false"
                    android:textColor="@color/text1"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <LinearLayout
                android:id="@+id/ivBookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_bookmark_yellow"
                    android:contentDescription="@string/ppt_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/title_fav"
                    android:textColor="@color/text1"
                    android:textFontWeight="500"
                    android:textSize="8sp"
                    android:ellipsize="none"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <LinearLayout
                android:id="@+id/ivEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_edit_green"
                    android:contentDescription="@string/excel_desc" />

                <TextView
                    android:id="@+id/tvExcel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="500"
                    android:textColor="@color/text1"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"  />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
