<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_24sdp">

    <!-- Later Button -->
    <TextView
        android:id="@+id/button_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/later"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textFontWeight="500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noti_allow"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_32sdp"
        android:textColor="@color/text1"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/button_later"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Notification Preview Card -->
    <LinearLayout
        android:clipToPadding="false"
        android:id="@+id/backgroundCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="@drawable/background_rectangle_noti"
        android:paddingHorizontal="@dimen/_1sdp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:outlineAmbientShadowColor="@color/blue"
            android:elevation="@dimen/_1sdp"
            android:id="@+id/noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg_notification"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="11dp"
            android:paddingVertical="@dimen/_6sdp">

            <FrameLayout
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Background"
                    android:src="@drawable/ic_background_splash" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:contentDescription="PDF Icon"
                    android:src="@drawable/icon_pdf" />
            </FrameLayout>

            <LinearLayout
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/noti_title1"
                    android:textColor="@color/text1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Transcript_2024_0810.pdf"
                    android:textColor="@color/gray"
                    android:textFontWeight="400"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/btn_background_red"
                android:elevation="0dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:letterSpacing="0"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="@string/open_file"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-32dp"
        android:gravity="center"
        android:paddingTop="@dimen/_20sdp"
        android:background="@drawable/bottom_dialog_background"
        app:layout_constraintTop_toBottomOf="@id/backgroundCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noti_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/text1" />

        <TextView
            android:id="@+id/full_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/noti_content"
            android:textSize="14sp"
            android:textColor="@color/text1"
            android:gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_allow"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background_red"
        android:elevation="0dp"
        android:letterSpacing="0"
        android:layout_marginTop="@dimen/_40sdp"
        android:shadowColor="@android:color/transparent"
        android:text="@string/allow"
        android:fontFamily="sans-serif"
        android:textFontWeight="500"
        android:stateListAnimator="@null"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/descriptionLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
