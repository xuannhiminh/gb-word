<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_dialog_background"
        android:elevation="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingTop="@dimen/_16sdp"
        android:paddingBottom="@dimen/_48sdp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0"
            android:lineSpacingExtra="0dp"
            android:text="@string/leave_the_app"
            android:textColor="#EF4949"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="500" />

        <!-- Ná»™i dung -->
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:letterSpacing="0"
            android:lineSpacingExtra="0dp"
            android:textFontWeight="400"
            android:text="@string/exit_app_content"
            android:textColor="@color/text1"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/layout_native"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frNativeAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="@dimen/_24sdp">

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_primary"
                android:elevation="0dp"
                android:letterSpacing="0"
                android:shadowColor="@android:color/transparent"
                android:text="@string/yes"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:textColor="@color/white"
                android:layout_marginEnd="32dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:theme="@style/Theme.PDFReaderProNegative"
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/text1"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                android:letterSpacing="0"
                android:background="@drawable/button_cancel"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
