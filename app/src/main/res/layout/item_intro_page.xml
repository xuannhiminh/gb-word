<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Layout chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Phần animation -->
        <FrameLayout
            android:id="@+id/animationContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/intro_background">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart"
                app:lottie_rawRes="@raw/intro1" />

            <!-- Fade ở đáy -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_fade_bottom" />
        </FrameLayout>

        <!-- Phần nội dung chữ -->
        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="@dimen/_24sdp"
            android:paddingHorizontal="@dimen/_16sdp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intro Title"
                android:fontFamily="sans-serif"
                android:textFontWeight="700"
                android:textColor="@color/text1"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intro description text here"
                android:textColor="@color/text1"
                android:textSize="16sp"
                android:gravity="center"
                android:textFontWeight="400"
                android:layout_marginTop="@dimen/_6sdp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Nút Skip đè trên góc phải -->
    <TextView
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_24sdp"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="@string/skip_language_activity"
        android:textColor="@color/text2"
        android:textSize="16sp"
        android:textStyle="bold"
         />
</FrameLayout>
