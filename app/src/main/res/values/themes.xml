<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PDFReaderPro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorHighlight">@android:color/transparent</item>
        <item name="android:textColorHint">@color/text2</item>
        <item name="android:textColorLink">@color/text2</item>
        <item name="android:fontVariationSettings">@null</item> <!-- Empty string works -->

        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSoftInputMode">adjustUnspecified</item>

        <item name="colorSwitchThumbNormal">@color/gray</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>

    <style name="Theme.PDFReaderProNegative" parent="Theme.MaterialComponents.DayNight.DarkActionBar">


        <item name="colorPrimary">@color/element</item>
        <item name="android:textColor">@color/text2</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSoftInputMode">adjustUnspecified</item>
        <item name="android:textColorHighlight">@android:color/transparent</item>
        <item name="android:textColorHint">@color/text2</item>
        <item name="android:textColorLink">@color/text2</item>
        <item name="android:fontVariationSettings">@null</item> <!-- Empty string works -->
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="backgroundColor">@color/white</item>
        <item name="titleTextColor">@color/textColor</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorControlHighlight">@color/color_app</item>
        <item name="colorControlNormal">@color/color_app</item>
        <item name="colorControlActivated">@color/color_app</item>
        <item name="android:textColorHighlight">@android:color/transparent</item>
        <item name="android:textColorHint">@color/text2</item>
        <item name="android:textColorLink">@color/text2</item>
        <item name="android:fontVariationSettings">@null</item> <!-- Empty string works -->
    </style>

    <style name="WindowTransition">
        <item name="android:activityOpenEnterAnimation">@anim/pull_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/pull_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
    </style>

    <style name="AdInspectorActivityTheme" parent="@android:style/Theme.Translucent">
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>

</resources>