<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_5sdp" />
            <gradient
                android:angle="0"
                android:centerColor="@color/color_f6f7f8"
                android:centerY="0.75"
                android:endColor="@color/color_f6f7f8"
                android:startColor="@color/color_f6f7f8" />
            <stroke
                android:width="6dp"
                android:color="@color/white" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/_5sdp" />
                <gradient
                    android:angle="0"
                    android:endColor="#B84242"
                    android:centerColor="#B84242"
                    android:startColor="#BD0000" />
                <stroke
                    android:width="6dp"
                    android:color="@color/white" />
            </shape>
        </clip>
    </item>

</layer-list>